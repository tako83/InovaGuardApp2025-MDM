<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".EnrollmentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_max="600dp"
        app:layout_constraintHorizontal_bias="0.5">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración de InovaGuard"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <EditText
            android:id="@+id/serial_number_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Número de Serie"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <EditText
            android:id="@+id/device_brand_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Marca del Dispositivo"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/serial_number_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <EditText
            android:id="@+id/device_model_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Modelo del Dispositivo"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/device_brand_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <EditText
            android:id="@+id/imei_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="IMEI (Opcional)"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:inputType="number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/device_model_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <Button
            android:id="@+id/enroll_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ENROLAR DISPOSITIVO"
            android:background="@drawable/rounded_purple_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/imei_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <Button
            android:id="@+id/activate_admin_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ACTIVAR ADMINISTRADOR DE DISPOSITIVO"
            android:background="@drawable/rounded_purple_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/enroll_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <Button
            android:id="@+id/grant_usage_access_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CONCEDER ACCESO DE USO"
            android:background="@drawable/rounded_purple_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/activate_admin_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <Button
            android:id="@+id/start_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="INICIAR SERVICIO INOVAGUARD"
            android:background="@drawable/rounded_purple_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/grant_usage_access_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <Button
            android:id="@+id/verify_status_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="VERIFICAR ESTADO DEL DISPOSITIVO"
            android:background="@drawable/rounded_purple_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/start_service_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

        <TextView
            android:id="@+id/status_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/verify_status_button"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aquí se mostrará el estado de la configuración."
            android:textColor="#333333"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/edittext_border"
            android:minHeight="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/status_label_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="400dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
